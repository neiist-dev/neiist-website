{
  "name": "neiist",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "setup": "chmod +x ./setup.sh && ./setup.sh",
    "release": "yarn changeset && yarn changeset version && yarn changeset publish",
    "dev": "docker compose -f ./docker/docker-compose.yml up -d && next dev --turbopack; docker compose -f ./docker/docker-compose.yml stop > /dev/null 2>&1",
    "build": "next build",
    "start": "next start",
    "lint": "eslint -c ./config/eslint/eslint.config.mjs .",
    "lint:fix": "eslint -c ./config/eslint/eslint.config.mjs --fix .",
    "format": "prettier --config ./config/prettier/.prettierrc.json --ignore-path ./config/prettier/.prettierignore --write .",
    "format:check": "prettier --config ./config/prettier/.prettierrc.json --ignore-path ./config/prettier/.prettierignore --check .",
    "lint-staged": "lint-staged -c ./config/eslint/lintstagedrc.mjs",
    "type:check": "tsc --noEmit",
    "clean": "rm -rf .next out dist build",
    "fresh": "yarn clean && yarn install",
    "db:reset": "docker compose -f ./docker/docker-compose.yml down && docker volume rm neiist_db && docker compose -f ./docker/docker-compose.yml up -d"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.1",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "hamburger-react": "^2.5.2",
    "ical-generator": "^9.0.0",
    "next": "15.2.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "pg": "^8.15.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-nice-dates": "^3.1.0",
    "swiper": "^11.2.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-validate-filename": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5"
  }
}
